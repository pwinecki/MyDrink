<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:fillViewport="false"
android:id="@+id/scrollview1"
    tools:context="com.example.patryk.mydrink.DrinksMenu">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/serialReveicedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="12sp" />




    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Scan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackrussian"
        android:background="@drawable/blackrussian"
        android:layout_centerHorizontal="true" />
    <!-- android:nestedScrollingEnabled="false"-->

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/bloodymary"
        android:background="@drawable/bloodymary"
        android:layout_below="@id/blackrussian"
        android:layout_alignStart="@+id/bluelagoon"
        android:layout_alignEnd="@+id/bluelagoon" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/bluelagoon"
        android:background="@drawable/bluelagoon"
        android:layout_below="@id/bloodymary"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/cosmo"
        android:background="@drawable/cosmo"
        android:layout_below="@id/bluelagoon"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/cubalibre"
        android:background="@drawable/cubalibre"
        android:layout_below="@id/cosmo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:id="@+id/longisland"
        android:background="@drawable/longisland"
        android:layout_below="@id/cubalibre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/margarita"
        android:background="@drawable/margarita"
        android:layout_marginTop="45dp"
        android:layout_below="@id/longisland"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/mojito"
        android:background="@drawable/mojito"
        android:layout_below="@id/margarita"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1" />

</RelativeLayout>
</ScrollView>